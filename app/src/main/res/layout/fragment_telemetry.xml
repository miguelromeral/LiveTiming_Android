<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
            name="player"
            type="es.miguelromeral.f1.codemasters.livetiming.classes.Player"/>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/tvGear"
            style="@style/text_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gear="@{player.telemetry.gear.intValue()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="8" />


        <TextView
            android:id="@+id/tvSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/tvGear"
            app:layout_constraintStart_toStartOf="@+id/tvGear"
            app:layout_constraintTop_toBottomOf="@+id/tvGear"
            app:speed="@{player.telemetry.speed}"
            tools:text="320 km/h" />




        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Throttle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <ProgressBar
            android:id="@+id/pbThrottle"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/fullBlack"
            android:fadeScrollbars="false"
            android:focusableInTouchMode="false"
            android:indeterminate="false"
            android:max="100"
            android:progress="@{player.telemetry.throttle.intValue()}"
            android:progressTint="@color/fullGreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:progress="50" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Brakes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pbThrottle" />

        <ProgressBar
            android:id="@+id/pbBrakes"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/fullBlack"
            android:fadeScrollbars="false"
            android:focusableInTouchMode="false"
            android:indeterminate="false"
            android:max="100"
            android:progress="@{player.telemetry.brake.intValue()}"
            android:progressTint="@color/fullRed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:progress="50" />




        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:text="Revs (x1000)" />

                <TextView
                    android:id="@+id/tvRevsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_weight="1"
                    android:text="@{player.telemetry.engineRPM.toString()}"
                    android:textAlignment="textEnd"
                    tools:text="4500" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="9"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15"
                    android:textAlignment="textEnd" />
            </LinearLayout>


            <ProgressBar
                android:id="@+id/pbRevs"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/fullBlack"
                android:fadeScrollbars="false"
                android:focusableInTouchMode="false"
                android:indeterminate="false"
                android:progressTint="@color/fullYellow"
                app:revs="@{player.telemetry}"
                tools:max="15000"
                tools:progress="6000" />


        </LinearLayout>




        <TextView
            android:id="@+id/tvDRS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/fullGray"
            android:text="DRS"
            app:drsStatus="@{player.telemetry.drs.intValue()}"
            app:layout_constraintBottom_toTopOf="@+id/tvGear"
            app:layout_constraintEnd_toEndOf="@+id/tvGear"
            app:layout_constraintStart_toStartOf="@+id/tvGear" />




        <TextView
            android:id="@+id/tvTyreName"
            app:tyreName="@{player.carStatus.tyreCompound.intValue()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Tyre Compound" />

        <ImageView
            android:id="@+id/tvTyre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/backgroundSection"
            app:layout_constraintBottom_toTopOf="@+id/tvTyreName"
            app:layout_constraintEnd_toEndOf="@+id/tvTyreName"
            app:srcCompat="@drawable/tyre_unknown"
            app:tyre="@{player.carStatus.tyreCompound.intValue()}" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
