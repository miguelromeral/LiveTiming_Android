<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="session"
            type="es.miguelromeral.f1.codemasters.livetiming.classes.toplayer.Session" />
    </data>



<!--    tools:context=".ui.fragments.SessionFragment"> -->


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/session_weather"
                    bind:session="@{session}"/>

                <include layout="@layout/session_grand_prix"
                    bind:session="@{session}"/>

                <include layout="@layout/session_info"
                    bind:session="@{session}"/>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>



</layout>