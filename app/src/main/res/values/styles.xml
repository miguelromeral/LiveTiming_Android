<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/fullBlack</item>
        <item name="android:navigationBarColor">@color/fullBlack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="liveTimingTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/lt_textSize</item>
        <item name="android:minWidth">@dimen/lt_textSize</item>
        <item name="android:layout_margin">@dimen/lt_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/fullWhite</item>
    </style>

    <style name="row_team_color">
        <item name="android:layout_width">@dimen/lt_team_width</item>
        <item name="android:layout_height">@dimen/lt_team_height</item>
        <item name="android:layout_marginStart">@dimen/lt_margin</item>
        <item name="android:layout_marginEnd">@dimen/lt_margin</item>
    </style>

    <style name="image_tyre_row">
        <item name="android:layout_width">@dimen/lt_tyre_icon</item>
        <item name="android:layout_height">@dimen/lt_tyre_icon</item>
    </style>

    <style name="title_section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/backgroundSectionTitle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/fullBlack</item>
        <item name="android:textSize">@dimen/section_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_highligted">
        <item name="android:textSize">@dimen/text_highlited</item>
    </style>

    <style name="section_constraintlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_section</item>
        <item name="android:background">@color/backgroundSection</item>
    </style>

    <style name="section_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00E46060</item>
    </style>

    <style name="tablayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/fullYellow</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/fullYellow</item>
        <item name="tabTextColor">@color/fullWhite</item>
    </style>

    <style name="viewpager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="appbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>

    </style>

    <style name="spinner_select_driver">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_spinner</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="recycler_view_live_timing">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="text_gear">
        <item name="android:textSize">42sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="progress_bar" parent="android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pb_horizontal_height</item>
        <item name="android:background">@color/fullBlack</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressTint">@color/tyre_cyan</item>
    </style>

    <style name="pb_circle">
        <item name="cpb_background_progressbar_color">@color/fullBlack</item>
        <item name="cpb_progress_direction">to_right</item>
        <item name="cpb_round_border">false</item>
        <item name="cpb_start_angle">205</item>
    </style>

    <style name="pb_circle_outter" parent="pb_circle">
        <item name="android:layout_width">150sp</item>
        <item name="android:layout_height">150sp</item>
        <item name="cpb_background_progressbar_width">25sp</item>
        <item name="cpb_progress_max">420</item>
        <item name="cpb_progressbar_color">@color/tyre_cyan</item>
        <item name="cpb_progressbar_width">15sp</item>
    </style>

    <style name="pb_circle_inner" parent="pb_circle">
        <item name="android:layout_width">120sp</item>
        <item name="android:layout_height">120sp</item>
        <item name="cpb_background_progressbar_width">18sp</item>
        <item name="cpb_progressbar_width">10sp</item>
    </style>

    <style name="text_speed_indicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_speed_live">
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/fullWhite</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
